
<div id="categorize">
  <p class="categorize">see</p>
  <select>
    <option value="all">all</option>
    <option value="문학">문학</option>
    <option value="비문학">비문학</option>
    <option value="전공서적">전공서적</option>
    <option value="예술">예술</option>
  </select>
</div>

<div id="booklist">

  <div id="booktop">
    <p class="category booktop">분류</p>
    <p class="title booktop">책제목</p>
    <p class="author booktop">저자</p>
    <p class="publisher booktop">출판사</p>
    <p class="available booktop">대여여부</p>
  </div>

  <% if @books.count > 0 %>

    <% @books.each do |book| %>
      <div class="book">
        <div class = "outside">
          <p class="category bookClass"><%= book.category %></p>
          <p class="title bookClass"><%= book.title %></p>
          <p class="author bookClass"> <%= book.author %></p>
          <p class="publisher bookClass"><%= book.publisher %></p>
          <% if book.returned %>
            <button book-id=<%= book.id %> class="available bookClass">
              대여가능
            </button>
          <% else %>
            <button book-id=<%= book.id %> class="reservation bookClass">
              대여불가
            </button>
          <% end %>
        </div>
        <div class = "content">
          <img class="pic" src=<%= book.data[:cover] %>>
          <p class="title contentClass"><%= book.title %></p>
          <p class="author contentClass"><%= book.author %></p>
          <p class="category contentClass"><%= book.category %></p>
          <p class="publisher contentClass"><%= book.publisher %></p>
          <p class="description contentClass"><%= book.data[:description] %></p>
        </div>
      </div>
    <% end %>
  <% end %>


  <% @totalPageList.each do |page| %>
    <% if page == @current_page.to_i %>
      <b id="currPageNum"><%= page %></b>
    <% else %>
      <a id="pageNum" href="/pagination?current_page=<%= page %>"><%= page %></a>
    <% end %>
  <% end %>


  <div id="search">
    <form action="/search">
      <select name="search_type">
        <option value="title">책 제목</option>
        <option value="author">저자</option>
      </select>

      <input name="search_query" type="text" class="searchbox" />
      <input type="submit" value="검색" />
    </form>


  </div>
